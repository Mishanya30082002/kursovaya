<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:AvaloniaApplication2.Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication2.editingAnOrder"
        Title="Редактировать заказ"
        x:DataType="models:order">
    <StackPanel
        Orientation="Vertical"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Margin="50">
        <TextBox Name="Search"
            TextChanged="Search_OnTextChanged">
            
        </TextBox>
        <ListBox Name="List"
                 Margin="20"
                 SelectionChanged="List_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:order">
                    <StackPanel Orientation="Horizontal">
                        <TextBox 
                            Margin="20" 
                            Text="{Binding Id}"
                            IsReadOnly="True"/>
                        <TextBox
                            Margin="20"
                            Text="{Binding ClientFirstName}"/>
                        <TextBox 
                            Margin="20" 
                            Text="{Binding ClientSecondName}"/>
                        <TextBox  
                            Margin="20" 
                            Text="{Binding ClientLastName}"/>
                        <TextBox 
                            Margin="20"
                            Text="{Binding ClientPhoneNumber}"/>
                        <TextBox 
                            Margin="20" 
                            Text="{Binding Model}"/>
                        <TextBox  
                            Margin="20" 
                            Text="{Binding Imei}"/>
                        <TextBox  
                            Margin="20" 
                            Text="{Binding Master}"
                            IsReadOnly="True"/>
                        <TextBox  
                            Margin="20" 
                            Text="{Binding Comment}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button 
            Content="Редактировать"
            Width="200"
            Height="40"
            FontSize="20"
            FontWeight="Bold"
            Background="#2196F3"
            Foreground="White"
            HorizontalAlignment="Center"
            Margin="0 20 0 0"
            Click="EditOrder">
        </Button>
        <Button 
            Content="Сменить пользователя"
            Width="200"
            Height="40"
            FontSize="20"
            FontWeight="Bold"
            Background="#2F4"
            Foreground="White"
            HorizontalAlignment="Center"
            Margin="0 20 0 0"
            Click="Back">
        </Button>
        <Button 
            Content="Новый заказ"
            Width="200"
            Height="40"
            FontSize="20"
            FontWeight="Bold"
            Background="#2F4"
            Foreground="White"
            HorizontalAlignment="Center"
            Margin="0 20 0 0"
            Click="newOrder">
        </Button>
    </StackPanel>
</Window>
