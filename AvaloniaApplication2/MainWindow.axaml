<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication2.MainWindow"
        Title="Окно авторизации">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50">
        <TextBlock FontSize="20" FontWeight="Bold" Margin="0 0 0 10">Логин</TextBlock>
        <TextBox Name="tbName" Width="200" Height="30" Margin="0 0 0 10"></TextBox>
        <TextBlock FontSize="20" FontWeight="Bold" Margin="0 0 0 10">Пароль</TextBlock>
        <TextBox Name="tbpassword" Width="200" Height="30" Margin="0 0 0 10"></TextBox>
        <Button Click="new" Width="150" Height="40" Content="Новый заказ" Background="#2196F3" Foreground="White" HorizontalAlignment="Center" Margin="0 10 0 0"></Button>
        <Button Click="old" Width="200" Height="40" Content="Редактирование заказов" Background="#FFC107" Foreground="White" HorizontalAlignment="Center" Margin="0 10 0 0"></Button>
    </StackPanel>
</Window>